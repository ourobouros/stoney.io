{% macro img(src, width=0, height=0, crop=False, ext="", alt="", inline=True) %}

{% if not inline %}<p>{% endif %}

<img
	src="{{ src|img(width=width, height=height, crop=crop, ext=ext) }}"
	{% if alt %}alt="{{ alt }}"{% endif %}
	/>

{% if not inline %}</p>{% endif %}

{% endmacro %}

{% macro highlight(lang) %}

<pre><code class="{{ lang }}">{{ caller() }}</code></pre>

{% endmacro %}
